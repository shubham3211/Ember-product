<h1>Our products</h1>

{{#each model as |product|}}
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">{{product.name}}</h3>
      </div>
      <div class="panel-body">
        <ul class="list-unstyled">
          <li>ID: {{product.id}}</li>
          <li>SKU: {{product.sku}}</li>
          <li>Category: {{product.category.name}}</li>
        </ul>
      </div>
      <div class="panel-footer">
        <div class="row vertical-align">
          <div class="col-xs-6">
            Unit price: <strong>{{product.unitPrice}}</strong>
          </div>
          <div class="col-xs-6">
            <button class="btn btn-default btn-sm pull-right" {{action "addToShoppingCart" product}}>Add to Cart</button>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/each}}